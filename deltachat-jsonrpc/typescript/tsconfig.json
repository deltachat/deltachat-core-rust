{
  "compilerOptions": {
    "alwaysStrict": true,
    "strict": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "rootDir": ".",
    "outDir": "dist",
    "lib": ["ES2017", "dom"],
    "target": "ES2017",
    "module": "es2020",
    "declaration": true,
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "isolatedModules": true
  },
  "include": ["*.ts", "example/*.ts", "test/*.ts"],
  "compileOnSave": false
}
